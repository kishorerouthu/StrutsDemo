<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="helloWorldForm" type="com.tutorial.struts.form.HelloWorldForm"/>
        <form-bean name="userProfileForm" type="com.tutorial.struts.form.UserProfileForm"/>
    </form-beans>

    <global-forwards>
        <forward name="editUserPage" path="/EditUser.jsp"/>
    </global-forwards>

    <action-mappings>

        <action path="/editUser" name="userProfileForm" scope="session"  forward="editUserPage.do" />

        <action path="/helloWorld"
                type="com.tutorial.struts.action.HelloWorldAction"
                name="helloWorldForm">
            <forward name="success" path="/HelloWorld.jsp"/>
        </action>

        <action path="/userProfile"
                type="com.tutorial.struts.action.UserProfileAction"
                name="userProfileForm"
                validate="true"
                input="/EditUser.jsp">
            <forward name="sucess" path="/ShowUser.jsp"/>
        </action>

    </action-mappings>

</struts-config>